  .facets--drawer.dialog-drawer--right {
    position: fixed;
    top: 0;
    right: 0;
    left: auto;
    height: 100vh;
    width: var(--drawer-width, 360px);
    transform: translateX(100%);     
    transition: transform .35s cubic-bezier(.25, .9, .25, 1);
